# Solo Teknoloji - Hostinger LiteSpeed Cache Bypass
# ================================================================
# Bu dosya Hostinger'in LiteSpeed cache'ini kontrol eder
# Deployment sonrasi 404 chunk hatalarini onlemek icin gerekli
# ================================================================

# LiteSpeed modulu varsa cache'i devre disi birak
<IfModule LiteSpeed>
    CacheLookup off
</IfModule>

# LiteSpeed Cache'i tamamen kapat
<IfModule litespeed>
    CacheDisable public /
</IfModule>

# Apache mod_headers ile cache kontrol
<IfModule mod_headers.c>
    # HTML ve ana sayfa icin cache yok
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "Thu, 01 Jan 1970 00:00:00 GMT"
    </FilesMatch>
    
    # Next.js data requests icin cache yok
    <FilesMatch "\.json$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>

# Proxy ve CDN icin ek basliklar
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set Vary "Accept-Encoding"
    # CDN'lere cache yapmamasini soyle
    Header set CDN-Cache-Control "no-cache, no-store"
    Header set Surrogate-Control "no-store"
</IfModule>

# GZIP sikistirma
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>
