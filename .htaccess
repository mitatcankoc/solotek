RewriteEngine On

# Ana sayfa icin ZORUNLU cache bypass - her istekte yeni HTML
RewriteCond %{REQUEST_URI} ^/$
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^$ /?_nocache=%{TIME} [R=302,L]

# LiteSpeed Cache - TAMAMEN kapat
<IfModule LiteSpeed>
CacheDisable public /
CacheLookup off
</IfModule>

# Headers - Cache KAPAT
<IfModule mod_headers.c>
Header always set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
Header always set Pragma "no-cache"
Header always set Expires "Thu, 01 Jan 1970 00:00:00 GMT"
</IfModule>

# Passenger Node.js Config
PassengerAppRoot /home/u136381340/domains/soloteknoloji.tr/public_html
PassengerAppType node
PassengerStartupFile server.js
PassengerNodejs /opt/alt/alt-nodejs22/root/bin/node
PassengerBaseURI /
