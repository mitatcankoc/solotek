# LiteSpeed Cache Devre Disi - Solo Teknoloji
# Bu dosya Hostinger LiteSpeed cache'ini devre disi birakir

# LiteSpeed Cache'i tamamen devre disi birak
<IfModule LiteSpeed>
    CacheLookup off
    RewriteEngine On
    RewriteRule .* - [E=Cache-Control:no-cache]
</IfModule>

# Tum HTML icin cache'i devre disi birak
<FilesMatch "\.(html|htm|php|js)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </IfModule>
</FilesMatch>

# Next.js static dosyalar icin uzun sureli cache (chunk'lar)
<FilesMatch "^[a-f0-9]+\.js$">
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=31536000, immutable"
    </IfModule>
</FilesMatch>

# Ana sayfa ve diger sayfalar icin cache bypass
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} ^/$
    RewriteCond %{HTTP:Cache-Control} !no-cache
    RewriteRule ^ - [E=no-cache:1]
</IfModule>

# Litespeed icin ek kontroller
<IfModule litespeed>
    # Cache'i devre disi birak
    CacheDisable public /
    CacheDisable private /
</IfModule>
